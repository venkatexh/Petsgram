<%- include("./partials/header") %>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Petsgram</h1>
    <p class="lead">The best place on the internet for adorable pet pictures. Have all the virtual cuddles you want!</p>
  </div>
</div>

<div class="container">
	<div class="row text-center" style="margin-bottom: 2rem; display: flex; flex-wrap: wrap;">
		<% pet.forEach(function(pet) { %>
		<div class="col-lg-3 col-md-4 col-sm-6 my-col">
			<div id="img-box">
				<a href="/pets/<%= pet._id %>">
					<img class="img-fluid rounded zoom" src="<%= pet.imgUrl %>">
				</a>
				<a href="/pets/<%= pet._id %>" color="white">
					<button class="btn btn-info btn-outline-dark" type="button" style="margin-top: 1rem;">View</button>
				</a>
			</div>
		</div>
		<% }) %>
	</div>
</div>

<%- include("./partials/footer") %>
		